@model Producer
@{
    ViewData["Title"] = "Delete producer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">Delete confirmation for @Model.ProducerName</h1>
            <div class="card">
                <div class="card-body">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle mt-4" style="max-width: 150px" id="LogoPreview" />
                    </div>
                    <form class="m-4" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group m-2">
                            <label asp-for="ProfilePictureURL" class="control-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" readonly>
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="ProducerName" class="control-label"></label>
                            <input asp-for="ProducerName" class="form-control" readonly>
                            <span asp-validation-for="ProducerName" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="ProducerBio" class="control-label"></label>
                            <input asp-for="ProducerBio" class="form-control" readonly>
                            <span asp-validation-for="ProducerBio" class="text-danger"></span>
                        </div>
                        <div class="form-group m-3">
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview')
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}
