@model Producer
@{
	ViewData["Title"] = "Details of the producer";

}


<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Details for @Model.ProducerName</h1>
		</p>
		<div class="row">

			<div class="table table-responsive shadow table-striped border">



				<div class="form-group text-center">
					<img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
				</div>

				<div class="form-group">
					<label asp-for="ProfilePictureURL" class="control-label"></label>
					<input asp-for="ProfilePictureURL" class="form-control" readonly>
					<span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="ProducerName" class="control-label"></label>
					<input asp-for="ProducerName" class="form-control" readonly>
					<span asp-validation-for="ProducerName" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="ProducerBio" class="control-label"></label>
					<input asp-for="ProducerBio" class="form-control" readonly>
					<span asp-validation-for="ProducerBio" class="text-danger"></span>
				</div>

				<div class="form-group mt-3 mb-3">
					@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
					{
						<a class="btn btn-outline-dark float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
					}
					<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
				</div>

			</div>

		</div>

	</div>
</div>
@section Scripts {
	<script>
		$(document).ready(function () {
			var output = document.getElementById('LogoPreview')
			output.src = $("#").val();
		})
	</script>

}