@model IEnumerable<Product>

@{
	ViewData["Title"] = "List of Products";
}



<div class="mb-4" style="display: flex; justify-content: center;">
    <img src="https://r2.easyimg.io/6vloqd115/asifnutsbanner.png" width="70%" alt="Alternate Text" />
    </div>
<div class="row">
	@foreach (var item in Model)
	{

        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-dark">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="float-right btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mt-4">
                        <img src="@item.ImageURL" width="100%" alt="@item.ProductName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.ProductDescription</p>
                            <p class="card-text"><b>Country: </b>@item.Country.CountryName</p>
                            <p class="card-text"><b>Category: </b>@item.productCategory</p>
                   
                        

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-dark float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-outline-dark"
                                   asp-controller="Orders"
                                   asp-action="AddItemToShoppingCart"
                                    asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.ProductPrice.ToString("c"))
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	}






</div>

@await Html.PartialAsync("_CreateItem", "Products")