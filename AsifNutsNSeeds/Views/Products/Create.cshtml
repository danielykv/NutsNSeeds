@model NewProductVM
@using AsifNutsNSeeds.Data
@using AsifNutsNSeeds.Data.Enums
 
@{
    ViewData["Title"] = "Create a new product";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new product</h4>
        </p>

        <div class="row">
            <div class="table table-responsive shadow table-striped border">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label"></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductPrice" class="control-label"></label>
                                <input asp-for="ProductPrice" type="number" class="form-control" />
                                <span asp-validation-for="ProductPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CountryID" class="control-label"></label>
                                <select asp-for="CountryID" class="form-control" asp-items="ViewBag.Countries"></select>
                                <span asp-validation-for="CountryID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductCategory" class="control-label"></label>
                                <select asp-for="ProductCategory" class="form-control" asp-items="Html.GetEnumSelectList<ProductCategory>()"></select>
                                <span asp-validation-for="ProductCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProducerID" class="control-label"></label>
                                <select asp-for="ProducerID" class="form-control" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BranchIds" class="control-label"></label>
                                <select asp-for="BranchIds" class="form-control" asp-items="ViewBag.Branches" multiple></select>
                                <span asp-validation-for="BranchIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ProductDescription" class="control-label"></label>
                                <textarea asp-for="ProductDescription" class="form-control"></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group mb-3 mt-3">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{ 
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}