@model Product
@{
    ViewData["Title"] = "Delete product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">Delete confirmation for @Model.ProductName</h1>
            <div class="card">
                <div class="card-body">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle mt-4" style="max-width: 150px" id="LogoPreview" />
                    </div>
                    <form class="m-4" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group m-2">
                            <label asp-for="ImageURL" class="control-label"></label>
                            <input asp-for="ImageURL" class="form-control" readonly>
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="ProductName" class="control-label"></label>
                            <input asp-for="ProductName" class="form-control" readonly>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="ProductDescription" class="control-label"></label>
                            <textarea asp-for="ProductDescription" class="form-control" readonly></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group m-3">
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview')
            output.src = $("#ImageURL").val();
        })
    </script>
}
