@model AsifNutsNSeeds.Models.Order

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header text-dark text-center">
            <h3>Order Completed successfully</h3>
        </div>
        <div class="row no-gutters">
            <div class="col-md-4">
                <div class="card-body">
                    <h5>Order Details</h5>
                    <p><strong>Order ID:</strong> @Model.OrderId.ToString()</p>
                    <p><strong>Email:</strong> @Model.Email.ToString()</p>
                    <p><strong>User ID:</strong> @Model.UserId.ToString()</p>
                    <p><strong>Address:</strong> @Model.Address.ToString()</p>
                    <p><strong>City:</strong> @Model.City.ToString()</p>
                </div>
            </div>
            <div class="col-md-8">
                <!-- Additional content if needed -->
            </div>
        </div>
    </div>
</div>
