@model Branch
@{
	ViewData["Title"] = "Add a new branch";

}


<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Add new Branch</h1>
		</p>
		<div class="row">

		<div class ="col-md-8 offset-2">

			<form asp-action="Create">

				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group text-center">
						<img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
				</div>

				<div class="form-group">
					<label asp-for="Logo" class="control-label"></label>
					<input asp-for="Logo" class="form-control">
					<span asp-validation-for="Logo" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="BranchName" class="control-label"></label>
					<input asp-for="BranchName" class="form-control">
					<span asp-validation-for="BranchName" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="BranchDescription" class="control-label"></label>
					<input asp-for="BranchDescription" class="form-control">
					<span asp-validation-for="BranchDescription" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-outline-success float-right" />
					<a class="btn btn btn-outline-secondary" asp-action="Index">Show All</a>

				</div>
			</form>

			</div>

		</div>
	
	</div>
</div>
@section Scripts {
	<script>
		$(document).ready(function () {
			var output = document.getElementById('LogoPreview')
			output.src = $("#Logo").val();
		})
		$("#Logo").on("change", function() {
		
			var output = document.getElementById('LogoPreview');
			output.src = $(this).val();
		
		})
	</script>

}