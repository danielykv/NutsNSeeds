@model Country
@{
    ViewData["Title"] = "Details of the country";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">Details for @Model.CountryName</h1>
                    <div class="table-responsive shadow table-striped border m-4">
                        <div class="form-group text-center">
                            <img class="border-info rounded-circle" style="max-width: 150px" id="LogoPreview" />
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="ProfilePictureURL" class="control-label"></label>
                            <input asp-for="ProfilePictureURL" class="form-control" readonly>
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="CountryName" class="control-label"></label>
                            <input asp-for="CountryName" class="form-control" readonly>
                            <span asp-validation-for="CountryName" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="CountryBio" class="control-label"></label>
                            <textarea asp-for="CountryBio" class="form-control" readonly></textarea>
                            <span asp-validation-for="CountryBio" class="text-danger"></span>
                        </div>
                        <div class="form-group m-3 text-center">
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            }
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Replace '#' with the appropriate selector for your image URL input field
            var output = document.getElementById('LogoPreview')
            output.src = $("#").val();
        })
    </script>
}
