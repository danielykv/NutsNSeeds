@model IEnumerable<Country>

@{
	ViewData["Title"] = "List of Countries";
}


<div class="row">

	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.ProfilePictureURL) </th>
					<th>@Html.DisplayNameFor(model => model.CountryName) </th>
					<th>@Html.DisplayNameFor(model => model.CountryBio) </th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>

						<td class="align-middle">
							<img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.CountryName" style="max-width: 150px" />
						</td>

						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CountryName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CountryBio)

						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
							<a class="btn btn-danger"><i class="bi bi-trash"></i>Trash</a>
						</td>

					</tr>
				}

			</tbody>


		</table>




	</div>





</div>